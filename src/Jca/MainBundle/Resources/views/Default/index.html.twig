{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/jcamain/css/main.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
    <div id="wrapper" class="container">
        <section id="profile" class="row">
            <div id="avatar" class="col-md-3 col-xs-3">
                <img src="{{ asset('bundles/jcamain/images/avatar.jpg') }}">
            </div>
            <div id="overview" class="col-md-6 col-xs-6 bgtrans">
                <h1>{{ 'xiaolongchen'|trans([]) }}</h1>
                <h3>{{ 'job_title'|trans([]) }}</h3>
            </div>
        </section>
        <section id="intro" class="row bgwhite">
            <p>{{ 'intro_text'|trans([]) }}</p>
        </section>
        <section id="pro" class="row bgtrans">
            <h1 class="text-center">{{ 'pro_title'|trans([]) }}</h1>

        </section>
        <section id="skill" class="row bgwhite">
            <h1 class="text-center">{{ 'skill_title'|trans([]) }}</h1>

        </section>
        <section id="edu" class="row bgtrans">
            <h1 class="text-center">{{ 'edu_title'|trans([]) }}</h1>
        </section>
        <section id="" class="row bgwhite">
            <h1 class="text-center">jsp</h1>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/jcamain/js/main.js') }}" type="text/javascript"></script>
{% endblock %}
