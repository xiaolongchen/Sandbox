<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <meta name="description" content="Xiaolong CHEN's resume site.PHP Developer.">
        <title>{% block title %}Welcome to Xiaolong CHEN's site{% endblock %}</title>
        <link href="{{ asset('bundles/vendor/bootstrap/dist/css/bootstrap.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/jcamain/css/font-awesome.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('built/css/core.css') }}"  rel="stylesheet" type="text/css">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-57989938-1', 'auto');
            ga('send', 'pageview');

        </script>
        <header>
            <div class="navbar">
                <div id="logo">

                </div>
                <div id="i18n">
                    <a href="{{ path(app.request.attributes.get("_route"), {"_locale": "zh"}) }}">{{ "lang.chinese"|transchoice(1) }}</a>
                    <a href="{{ path(app.request.attributes.get("_route"), {"_locale": "en"}) }}">{{ "lang.english"|transchoice(1) }}</a>
                    <a href="{{ path(app.request.attributes.get("_route"), {"_locale": "fr"}) }}">{{ "lang.french"|transchoice(1) }}</a>
                </div>
            </div>
        </header>
        {% block body %}{% endblock %}
            <script src="{{ asset('bundles/vendor/jquery/dist/jquery.js') }}" type="text/javascript"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
